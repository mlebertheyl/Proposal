	keywords = {Bayesian inference, georeferenced data, point process, spatial count, spatial modelling},
	pages = {760--766},
	file = {Full Text PDF:/Users/martinale-bertheyl/Zotero/storage/L8SIGYLG/Bachl et al. - 2019 - inlabru an R package for Bayesian spatial modelli.pdf:application/pdf;Snapshot:/Users/martinale-bertheyl/Zotero/storage/FZU2U3F5/2041-210X.html:text/html},
