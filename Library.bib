	author = {Siqueira, Alexandre C. and Morais, Renato A. and Bellwood, David R. and Cowman, Peter F.},
	month = may,
	year = {2020},
	note = {Number: 1
Publisher: Nature Publishing Group},
	keywords = {Biogeography, Coevolution, Evolutionary ecology, Phylogenetics, Speciation},
	pages = {2669},
	file = {Full Text PDF:/Users/martinale-bertheyl/Zotero/storage/2DVDIIW2/Siqueira et al. - 2020 - Trophic innovations fuel reef fish diversification.pdf:application/pdf},
